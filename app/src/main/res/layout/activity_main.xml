<!-- activity_main.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/instructionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Welcome to the &quot;Drive to MSU&quot; Navigation App!"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="64dp"
        android:textStyle="bold"
        android:gravity="center"/>

    <TextView
        android:id="@+id/descriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/instructionTextView"
        android:layout_centerHorizontal="true"
        android:text="This app provides a convenient way for users to navigate by car from their current location to Montclair State University (MSU). Whether you're a student, faculty member, or visitor, this app makes it easy to reach your destination with turn-by-turn directions."
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif"
        android:layout_marginTop="32dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/driveToMSUButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/descriptionTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:text="Drive to MSU"
        android:textColor="@android:color/white"
        android:background="#3F51B5"
        android:textSize="18sp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"/>

</RelativeLayout>
